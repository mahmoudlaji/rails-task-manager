<h1>All Tasks to Do!!!!</h1>
<div class="card">
    <div class="card-body">



        <ul>
            <% @tasks.each do |task| %>
                <li>
                    <%= link_to task.title, task_path(task) %>
                </li>
                <% end %>
        </ul>
    </div>
    <%= link_to "New Task To Create" , new_task_path %>
</div>